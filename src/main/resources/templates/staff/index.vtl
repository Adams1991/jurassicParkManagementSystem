<p class="pageHeader">All Staff</p>



<div>
    <a href="/staffs/new" class="button center">New Staff Member</a>
</div>

<br>

<div class="container">


    <table>
        <tr>
            <th>Name</th>
            <th>Job</th>
            <th>Park</th>
        </tr>

        #foreach($staff in $staffs)
        <tr>
            <td>$staff.getName()</td>
            <td>$staff.getJob()</td>
            <td>$staff.getPark().getName()</td>

            <td><form method="post" action="/staffs/$staff.getId()/delete">
                <input type="submit" value="delete"/>

            </form>
            </td>
            <td>
                <a href="/staffs/$staff.getId()/edit">Edit Staff Member</a>
            </td>
            <td>
                <a href="/staffs/$staff.getId()/feed">Feed Carnivore</a>
            </td>
        </tr>
        #end

    </table>


</div>